<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/offline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Connect To Internet"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/offline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Please connect to a WIFI or turn on mobile data (mobile data will cost additional charges)"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_offline"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="#3E80B4"
            android:clickable="true"
            android:text="5 birr offline"
            android:textColor="#4DBCD2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="#3E80B4"
            android:clickable="true"
            android:text="Cancel"
            android:textColor="#4DBCD2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_wifi"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="#3E80B4"
            android:clickable="true"
            android:text="WiFi"
            android:textColor="#4DBCD2"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
